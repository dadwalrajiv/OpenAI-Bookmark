{
  "manifest_version": 3,
  "name": "AI Chat Bookmarks - ChatGPT, Claude, Gemini, Copilot",
  "version": "0.2.1", 
  "description": "Bookmark important messages in ChatGPT, Claude, Gemini, and Copilot. Save AI insights with notes and search.",
  "author": "Rajiv Thakur",
  "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
   },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
    
  ],
   "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["chatgpt-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["claude-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["gemini-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://copilot.microsoft.com/*"
      ],
      "js": ["copilot-content.js"],
      "css": ["styles.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}